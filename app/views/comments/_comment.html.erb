<div id="box-<%= comment.id %>">
  <div id="comment-list-<%=comment.id%>">
    <hr/>
    <div class="row mx-1">
      <h6 style="color: navy"><%=User.find_by(id: comment.user_id).name%></h6>
      <small class="text-color-gray ml-2"><%=pretty_date(comment.created_at)%></small>
    </div>
    <div class="ml-1">
      <% comment.mention_list.each do |mention|%>
        <span class="color-primary mr-1 fs-14">@<%= User.find(mention)&.name %></span>
      <% end%>
    </div>
    <p class="ml-2 mb-0 mt-2"><%= comment.comment %></p>
  </div> 
  <p style="text-align:right">
    <%= link_to comment_path(comment.id), method: :delete, remote: true do %>
      <button type="button" class="btn btn-secondary btn-sm">삭제</button>
    <%end%>
  </p>
</div>