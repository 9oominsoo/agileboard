<style>
  .container {
    max-width: 1240px !important;
  }
  .pagination .page.current {
    background-color: transparent !important;
    color: rgb(7, 3, 130) !important;
    padding: 0 8px 0 8px !important;
  }
  .banner{
    overflow: hidden;
    background-size: 100% 100% !important;
    background-repeat: no-repeat;
    width: 100%;
    max-height: 450px;
  }
</style>

<div class='container my-4'>
  <div class="active-pink-3 active-pink-4 mb-4">
    <input class="form-control" type="text" placeholder="제목을 검색해보세요" aria-label="Search">
  </div>
  <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
  <ol class="carousel-indicators">
    <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
    <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
    <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
  </ol>
  <div class="carousel-inner">
    <div class="carousel-item active">
      <img class="banner" src="image/app.png" alt="First slide">
      <div class="carousel-caption d-none d-md-block">
        <h2 class="font-weight-bold">프로젝트 1</h2>
        <h4>ios 프로젝트</h4>
      </div>
    </div>
    <div class="carousel-item">
      <img class="banner" src="image/rails.png" alt="Second slide">
      <div class="carousel-caption d-none d-md-block">
        <h2 class="font-weight-bold">프로젝트 2</h2>
        <h4>andriod 프로젝트</h4>
      </div>
    </div>
    <div class="carousel-item">
      <img class="banner" src="image/test4.jpg" alt="Third slide">
      <div class="carousel-caption d-none d-md-block">
        <h2 class="font-weight-bold" >프로젝트 3</h2>
        <h4>ruby on rails 프로젝트</h4>
      </div>
    </div>
  </div>
  <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
  </div>
  <p></p>
  <div class="row justify-content-space-around">
    <% @posts.each do |post| %>
      <%= render post %>
    <% end %>
  </div>
  <div class="pagination justify-content-center mt-3">
    <%= paginate @posts %>
  </div>
</div>