<%= form_for @function do |f| %>
  <%= render 'shared/input', name: :title, type: :text_field, f: f, placeholder: "제목을 입력하세요" %>
  <%= f.label :project_id %>
  <%= f.select :project_id, options_for_select(Project.all.map {|p| [p.name, p.id]}), {}, class: "form-control mb-3" %>
  <%= f.label :description %>
  <%= f.text_area :description, class: "form-control", rows: "20" %>
  <%= f.label :start_at %>
  <%= f.date_field :start_at, value: Time.now.strftime("%Y-%m-%d"), class: "form-control"%>
  <%= f.label :end_at %>
  <%= f.date_field :end_at, value: Time.now.strftime("%Y-%m-%d"),class: "form-control"%>
  <%= f.label :user_list %>
  <%= render 'shared/option_for_select', f: f, columns: :user_list %>

  <%= f.submit "#{f.object.new_record? ? '등록' : '수정'}", class: 'btn btn-primary btn-block mt-3' %>
<% end %> 

